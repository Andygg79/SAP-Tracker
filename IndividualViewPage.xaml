<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAPTracker.IndividualViewPage"
             Title="Individual Metrics">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <Label Text="Individual Readiness Matrix"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Metric Input Controls -->
            <VerticalStackLayout Spacing="20">
                <!-- Reuse this structure for all metrics -->
                <StackLayout>
                    <Label Text="Weapons Qualification" FontSize="18" FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="WeaponsDatePicker" DateSelected="OnMetricDateChanged" />
                        <Button x:Name="WeaponsStatusButton" Text="Status" BackgroundColor="Gray" TextColor="White" />
                    </HorizontalStackLayout>
                </StackLayout>

                <StackLayout>
                    <Label Text="Dental" FontSize="18" FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="DentalDatePicker" DateSelected="OnMetricDateChanged" />
                        <Button x:Name="DentalStatusButton" Text="Status" BackgroundColor="Gray" TextColor="White" />
                    </HorizontalStackLayout>
                </StackLayout>

                <StackLayout>
                    <Label Text="PHA" FontSize="18" FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="PHADatePicker" DateSelected="OnMetricDateChanged" />
                        <Button x:Name="PHAStatusButton" Text="Status" BackgroundColor="Gray" TextColor="White" />
                    </HorizontalStackLayout>
                </StackLayout>

                <StackLayout>
                    <Label Text="VISION" FontSize="18" FontAttributes="Bold"/>
