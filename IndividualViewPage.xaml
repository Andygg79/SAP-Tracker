                        <Button x:Name="SGLVStatusButton" Text="Status" BackgroundColor="Gray" TextColor="White" />
                    </HorizontalStackLayout>
                </StackLayout>

                <StackLayout>
                    <Label Text="ARB" FontSize="18" FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="ARBDatePicker" DateSelected="OnMetricDateChanged" />
