                    </HorizontalStackLayout>
                </StackLayout>

                <StackLayout>
                    <Label Text="DD93" FontSize="18" FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="DD93DatePicker" DateSelected="OnMetricDateChanged" />
                        <Button x:Name="DD93StatusButton" Text="Status" BackgroundColor="Gray" TextColor="White" />
