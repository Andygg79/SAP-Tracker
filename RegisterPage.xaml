<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAPTracker.RegisterPage"
             Title="Create Account">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Create Account" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

        <Button Text="Create Account" Clicked="OnCreateAccountClicked" />

        <Button Text="Back to Login" Clicked="OnBackClicked" />

    </VerticalStackLayout>

</ContentPage>
