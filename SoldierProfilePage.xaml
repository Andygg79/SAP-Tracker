<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAPTracker.SoldierProfilePage"
             Title="Soldier Profile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Soldier Info -->
            <Label x:Name="NameLabel" FontSize="24" FontAttributes="Bold" />
            <Label x:Name="RankLabel" FontSize="18" />
            <Label x:Name="UnitLabel" FontSize="18" />
            <Label x:Name="DutyTitleLabel" FontSize="18" />

            <!-- Divider -->
            <BoxView HeightRequest="2" Color="Black" Margin="0,10,0,10" />

            <!-- Metrics List -->
            <Label Text="Metrics:" FontSize="20" FontAttributes="Bold" />
            <CollectionView x:Name="MetricsList" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
