<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAPTracker.SelectionPage"
             Title="Select User Type">

    <VerticalStackLayout Padding="40" Spacing="25" VerticalOptions="Center">

        <Label Text="User Type Selection"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Individual"
                Clicked="OnIndividualClicked"
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="200"
                HorizontalOptions="Center" />

        <Button Text="Team"
                Clicked="OnTeamClicked"
                BackgroundColor="#34C759"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="200"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
