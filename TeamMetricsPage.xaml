<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SAPTracker"
             x:Class="SAPTracker.TeamMetricsPage"
             Title="Team Metrics">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Add/Remove Buttons -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
            <Button Text="Add Member"
                    Clicked="OnAddMemberClicked"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    WidthRequest="140" />

            <Button Text="Remove Member"
                    Clicked="OnRemoveMemberClicked"
                    BackgroundColor="#FF3B30"
                    TextColor="White"
                    CornerRadius="8"
                    WidthRequest="140" />
        </HorizontalStackLayout>

        <!-- Team Members Header -->
        <Label Text="Team Members"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,15,0,0" />

        <!-- Team List -->
        <CollectionView x:Name="TeamList"
                        ItemsLayout="VerticalList"
                        SelectionMode="Single"
                        SelectionChanged="OnTeamMemberSelected"
                        HeightRequest="500">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Teammate">
                    <Frame BackgroundColor="#F5F5F5"
                           BorderColor="Black"
                           CornerRadius="12"
                           HasShadow="True"
                           Padding="15"
                           Margin="5">
                        <HorizontalStackLayout Spacing="15" VerticalOptions="Center">

                            <!-- Readiness Color Dot -->
                            <BoxView WidthRequest="20" 
                                     HeightRequest="20" 
                                     CornerRadius="10"
                                     Color="{Binding StatusColor}" />

                            <!-- Soldier Info -->
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="{Binding Email}"
                                       FontSize="14"
                                       TextColor="Gray" />
                            </VerticalStackLayout>

                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
